#!/usr/bin/env ruby     
require "fileutils"

KIT = "kit"
DEV_PKG ="dev-packages"
PULL_CMD ="smart-pull"
CUR_WD = FileUtils.pwd

repo_paths = ["~/.kit", "."]
Dir.foreach DEV_PKG do |dpkg|
  next if dpkg =~ /^\.\.?$/
  repo_paths << "#{DEV_PKG}/#{dpkg}"
end if File.exists? DEV_PKG

repo_paths.map! { |path| File.expand_path path }
repo_paths.map { |p| 
  Thread.new(p) do |path|
    puts "Pulling #{File.basename path}"  
    out = `cd #{path} && git #{PULL_CMD}` 
    puts out
  end
}.each {|t| t.join }

`rm -rdf ~/.kit/packages`
FileUtils.cd CUR_WD
puts `#{KIT}`
